{
    "name": "zoopcommerce/shard",
    "description": "Add new behaviours to Doctrine Mongo ODM Documents",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "doctrine",
        "mongo",
        "odm",
        "zoop"
    ],
    "homepage": "http://zoopcommerce.github.io/shard",
    "authors": [
        {
            "name": "Tim Roediger",
            "email": "superdweebie@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/superdweebie/mongodb-odm"
        }
    ],
    "require": {
        "php"                              : ">=5.4",
        "doctrine/annotations"             : "dev-master#a11349d39d85bef75a71bd69bd604ac4fb993f03 as dev-master",
        "zoopcommerce/common"              : "~1.1",
        "zoopcommerce/mystique-php"        : "~1.2",
        "doctrine/mongodb-odm"             : "dev-hotfix719 as 1.0.0-BETA9",
        "zendframework/zend-json"          : "~2.2",
        "zendframework/zend-crypt"         : "~2.2",
        "zendframework/zend-math"          : "~2.2",
        "zendframework/zend-servicemanager": "~2.2",
        "zendframework/zend-stdlib"        : "~2.2"
    },
    "require-dev": {
        "phpunit/phpunit"                  : ">=3.7",
        "phpmd/phpmd"                      : "1.4.*",
        "squizlabs/php_codesniffer"        : "1.4.*",
        "zoopcommerce/juggernaut"          : "~1.1",
        "zoopcommerce/slipstream"          : "~0.1"
    },
    "autoload": {
        "psr-0": {
            "Zoop\\Shard": "lib/"
        }
    }
}
